{% extends 'base.html.twig' %}

{% block title %}Hello CatalogueController!
{% endblock %}

{% block body %}
	<main role="main">
		{% if app.user %}
			<section class="jumbotron text-center">
				<div class="container">
					<h1 class="jumbotron-heading">Gestion du catalogue
					</h1>
					<p class="lead text-muted">
						Cette section est uniquement réservée aux admins du site.</p>
					<p>
						<a href=" {{ path('nouveau') }} " class="btn btn-primary my-2">Ajouter un article</a>
					</p>
				</div>
			</section>
		{% endif %}


		<div class="album py-5 bg-light">
			<div class="container">
				<div class="row">
					{% for article in catalogue %}
						<div class="col-md-6">
							<div class="card mb-6 box-shadow">
								<a href="{{ path('afficher', {'id': article.id}) }}">
									<img class="card-img-top" src="https://picsum.photos/200/300" alt="{{ article.imagePrincipale }}" height="400px">
								</a>
								<div class="card-body">
									<p class="card-text">{{ article.title }}</p>
									<div class="d-flex justify-content-between align-items-center">
										<div class="btn-group">
											<a href="{{ path('afficher', {'id': article.id}) }}" type="button" class="btn btn-sm btn-outline-secondary">voir
											</a>
											{% if app.user %}
												<a href="{{ path('suprimmer', {'id': article.id}) }}" type="button" class="btn btn-sm btn-outline-secondary" onclick=" return confirm('Voulez-vous vraiment suprimmer ? ')">Supprimer
												</a>
											{% endif %}
										</div>
										<small class="text-muted">
											{{ article.DateAt|date("Y-m-d") }}</small>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>


	</main>
{% endblock %}
